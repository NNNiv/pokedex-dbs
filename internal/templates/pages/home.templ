templ Result(pokemon db.Pokemon) {
	<div class="flex items-center">
		<img src={ fmt.Sprintf("static/assets/gen-%d/%s.png", pokemon.Gen, pokemon.Id) } alt="pokemon-image" class="ml-8 mr-4 w-1/2 h-1/2"/>
		<div>
			<div class="text-4xl text-pkmnfg font-semibold mb-10">{ pokemon.Name }</div>
			<div class="mt-4 grid grid-cols-2">
				@components.TypeComponent(pokemon.Type1)
				if pokemon.Type2 != nil {
					@components.TypeComponent(*pokemon.Type2)
				}
			</div>
			<div class="text-pkmnfg w-1/4">{ pokemon.Entry }</div>
		</div>
	</div>
}

